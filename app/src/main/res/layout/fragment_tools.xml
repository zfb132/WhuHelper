<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_twocamera"
        android:layout_width="126dp"
        android:layout_height="102dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/cv_sms"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/lena" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_tools_twocamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cv_twocamera"
        android:layout_alignTop="@+id/tv_tools_demo"
        android:layout_gravity="center_horizontal"
        android:text="点击双摄像头"
        android:textSize="20sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_sms"
        android:layout_width="126dp"
        android:layout_height="102dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/lena" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_tools_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/cv_sms"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="139dp"
        android:text="点击添加短信"
        android:textSize="20sp" />
</RelativeLayout>